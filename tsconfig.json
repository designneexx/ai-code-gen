{
  "compilerOptions": {
      "target": "ESNext",
      "sourceMap": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "useDefineForClassFields": true,
      "baseUrl": ".",
      "outDir": "./dist",
      "paths": {
          "src/*": ["./src/*"]
      }
  },
  "include": ["src/**/*"]
}
